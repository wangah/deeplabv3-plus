{
    "name": "DeepLabv3-plus_ResNet50",
    "n_gpu": 1,
    "arch": {
        "type": "DeepLabv3-plus_ResNet50",
        "args": {
            "num_classes": 20
        }
    },
    "data_loader": {
        "type": "CityscapesDataLoader",
        "args":{
            "data_dir": "./data/",
            "img_dir": "./data/leftImg8bit/",
            "mask_dir": "./data/gtFine/",
            "batch_size": 4,
            "shuffle": true,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.007,
            "weight_decay": 0.0005,
            "momentum": 0.9
        }
    },
    "ignore_idx": 19,
    "loss": "CrossEntropyLoss",
    "metrics": ["mIoU"],
    "lr_scheduler": {
        "type": "poly",
        "args": {
            "max_decay_steps": 90000,
            "end_learning_rate": 0.001,
            "power": 0.9
        }
    },
    "trainer": {
        "iterations": 90000,
        "save_dir": "./experiments/",
        "ckpt_dir": "./experiments/checkpoints/",
        "tensorboard_dir": "./experiments/runs/",
        "accumulate_grad_batches": 4,
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "max mIoU",
        "early_stop": 50,
        "tensorboard": true
    }
}
