{
    "name": "DeepLabv3-plus_ResNet50",
    "n_gpu": 1,
    "data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 4,
            "shuffle": true
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.007,
            "weight_decay": 0.0005,
            "momentum": 0.9
        }
    },
    "loss": "CrossEntropyLoss",
    "metrics": ["mIoU"],
    "lr_scheduler": {
        "type": "poly",
        "args": {
            "": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 121,
        "iterations": 90000,
        "save_dir": "experiments",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max mIoU",
        "early_stop": 50,

        "tensorboard": true
    }
}
